@model IEnumerable<MagicVilla_Utility.DTO.VillaNumber.VillaNumberDTO>

    <br />
    <div class="container p-4 border">
        <div class="row pb-2">
            <div class="col">
                <h1 class="text-primary">Villa Number List</h1>
            </div>
            <div class="col text-end pt-1">
                <a asp-controller="VillaNumber" asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus pe-lg-2"></i><span>Create New Villa Number</span></a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Code</th>
                    <th>SpecialDetails</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Villa.Name</td>
                    <td>@item.Code</td>
                    <td>@item.SpecialDetails</td>
                    <td>
                        <a asp-controller="VillaNumber" asp-action="Update" class="btn btn-outline-success" asp-route-code="@item.Code"><i class="bi bi-pencil"></i></a>
                        <a asp-controller="VillaNumber" asp-action="Delete" class="btn btn-outline-danger" asp-route-code="@item.Code"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
