@model MagicVilla_Utility.DTO.VillaNumber.VillaNumberDTO

<div class="container">
    <h2 class="text-danger">Delete Villa Number</h2>
    <hr />
    <h4>Are you sure you want to delete the following villa number?</h4>

    <div class="row mt-4">
        <div class="col-md-6">
            <strong>Code:</strong> @Model.Code
        </div>
        <div class="col-md-6">
            <strong>SpecialDetails:</strong> @Model.SpecialDetails
        </div>
        <div class="col-md-6">
            <strong>VillaID:</strong> @Model.VillaID
        </div>
    </div>

    <form asp-action="DeleteVillaNumber" asp-controller="VillaNumber" method="post" class="mt-4">
        <!-- Hidden input to pass the id of the villa to the POST action -->
        <input type="hidden" name="Code" value="@Model.Code" />

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-action="Index" asp-controller="Villa" class="btn btn-outline-secondary form-control">Cancel</a>
            </div>
        </div>
    </form>
</div>
